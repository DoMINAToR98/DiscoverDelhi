<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.sodevan.discoverdelhi.About">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AIESEC in Delhi IIT"
                android:fontFamily="serif"
                android:textSize="20sp"
                android:id="@+id/head"
                android:textColor="#222222"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/head"
                android:textSize="17sp"
                android:fontFamily="sans-serif"
                android:text="@string/about_midtxt"
                android:id="@+id/about_midtext"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECENT AWARDS"
                android:id="@+id/about_awd"
                android:layout_below="@id/about_midtext"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about_impact"
                android:layout_below="@id/about_awd"
                android:text="Our Impact"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/about_add"
                android:fontFamily="sans-serif"
                android:layout_below="@id/about_impact"
                android:text="@string/about_address"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_add"
                android:id="@+id/about_reachus"
                android:text="Reach Us"
                />



        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
